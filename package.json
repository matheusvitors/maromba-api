{
	"name": "maromba-api",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "node dist/server.js",
		"build": "tsup src",
		"dev": "dotenv -e .env nodemon src/server.ts",
		"upgrade": "ncu -u && npm i",
		"test": "vitest run --coverage",
		"test:watch": "vitest --ui",
		"test:e2e:watch": "dotenv -e .env.test npm run clear-db && vitest --dir __tests__ --ui",
		"test:e2e:watch:file": "dotenv -e .env.test npm run clear-db && vitest __tests__/routes/usuarios/usuarios-list.test --ui",
		"test:unit:watch": "vitest --dir src --ui",
		"test:unit:local": "dotenv -v TEST_TYPE=unit -- npm run test:unit",
		"test:unit": "vitest run --dir src",
		"test:e2e": "vitest run --dir __tests__",
		"migrate": "npx prisma migrate dev",
		"clear-db": "npx prisma migrate reset --force",
		"fix-ssl": "set NODE_TLS_REJECT_UNAUTHORIZED=0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/matheusvitors/maromba-api.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"bugs": {
		"url": "https://github.com/matheusvitors/maromba-api/issues"
	},
	"homepage": "https://github.com/matheusvitors/maromba-api#readme",
	"devDependencies": {
		"@types/node": "^25.0.10",
		"prisma": "^7.3.0",
		"@faker-js/faker": "^10.2.0",
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "4.0.18",
		"dotenv-cli": "^11.0.0",
		"nodemon": "^3.1.11",
		"supertest": "^7.2.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@prisma/adapter-mariadb": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"dotenv": "^17.2.3",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.6",
		"express": "^5.2.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.3",
		"ms": "^2.1.3",
		"randexp": "^0.5.3",
		"rate-limiter-flexible": "^9.0.1",
		"uuidv7": "^1.1.0",
		"zod": "^4.3.6"
	}
}
